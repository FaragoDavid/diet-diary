datasource db {
  provider = "postgresql"
  url      = env("DB_CONN_STRING")
}

generator client {
  provider = "prisma-client-js"
}

model Ingredient {
  id             String  @id @default(uuid())
  name           String
  caloriesPer100 Int?    @map("calories_per_100")
  carbsPer100    Int?    @map("carbs_per_100")
  fatPer100      Int?    @map("fat_per_100")
  isVegetable    Boolean @default(false) @map("is_vegetable")
  isCarbCounted  Boolean @default(true) @map("is_carb_counted")

  recipeIngredients RecipeIngredient[]
  dishes            Dish[]

  @@map("ingredients")
}

model Recipe {
  id       String @id @default(uuid())
  name     String
  amount   Int?
  servings Int?

  ingredients RecipeIngredient[]
  dishes      Dish[]

  @@map("recipes")
}

model RecipeIngredient {
  amount Int

  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  recipeId     String     @map("recipe_id")
  ingredientId String     @map("ingredient_id")

  @@unique([recipeId, ingredientId])
  @@map("recipe_ingredients")
}

model Dish {
  id       String @id @default(uuid())
  name     String
  amount   Int
  calories Int
  carbs    Int
  fat      Int

  meal         Meal        @relation(fields: [mealDate, mealType], references: [date, type])
  mealDate     DateTime    @map("meal_date")
  mealType     String      @map("meal_type")
  recipe       Recipe?     @relation(fields: [recipeId], references: [id])
  recipeId     String?     @map("recipe_id")
  ingredient   Ingredient? @relation(fields: [ingredientId], references: [id])
  ingredientId String?     @map("ingredient_id")

  @@map("dishes")
}

model Meal {
  date     DateTime
  type     String
  calories Int?
  carbs    Int?
  fat      Int?

  dishes  Dish[]
  Day     Day      @relation(fields: [dayDate], references: [date])
  dayDate DateTime @map("day_date")

  @@unique([date, type])
  @@map("meals")
}

model Day {
  date DateTime

  meals Meal[]

  @@unique([date])
  @@map("days")
}
