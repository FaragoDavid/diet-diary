datasource db {
  provider = "postgresql"
  url      = env("DB_CONN_STRING")
}

generator client {
  provider = "prisma-client-js"
}

model Ingredient {
  id             String  @id @default(uuid())
  name           String
  caloriesPer100 Float  @map("calories_per_100") @default(0)
  carbsPer100    Float  @map("carbs_per_100") @default(0)
  fatPer100      Float  @map("fat_per_100") @default(0)
  isVegetable    Boolean @default(false) @map("is_vegetable")
  isCarbCounted  Boolean @default(true) @map("is_carb_counted")

  recipeIngredients RecipeIngredient[]
  dishes            Dish[]

  @@map("ingredients")
}

model Recipe {
  id       String @id @default(uuid())
  name     String
  calories Float @default(0)
  carbs    Float @default(0)
  fat      Float @default(0)
  amount   Float @default(0)
  servings Int?

  ingredients RecipeIngredient[]
  dishes      Dish[]

  @@map("recipes")
}

model RecipeIngredient {
  amount Float

  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  recipeId     String     @map("recipe_id")
  ingredientId String     @map("ingredient_id")

  @@unique([recipeId, ingredientId])
  @@map("recipe_ingredients")
}

model Dish {
  id       String @id @default(uuid())
  name     String
  amount   Float
  calories Float
  carbs    Float
  fat      Float

  meal         Meal        @relation(fields: [mealDate, mealType], references: [date, type], onDelete: Cascade)
  mealDate     DateTime    @map("meal_date")
  mealType     String      @map("meal_type")
  recipe       Recipe?     @relation(fields: [recipeId], references: [id])
  recipeId     String?     @map("recipe_id")
  ingredient   Ingredient? @relation(fields: [ingredientId], references: [id])
  ingredientId String?     @map("ingredient_id")

  @@map("dishes")
}

model Meal {
  date     DateTime
  type     String
  calories Float?
  carbs    Float?
  fat      Float?

  dishes  Dish[]
  Day     Day      @relation(fields: [dayDate], references: [date], onDelete: Cascade)
  dayDate DateTime @map("day_date")

  @@unique([date, type])
  @@map("meals")
}

model Day {
  date DateTime

  meals Meal[]

  @@unique([date])
  @@map("days")
}
